<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
    <title>Subir Producto</title>
</head>
<body>
    <%- include('../partials/title.ejs') %>
    <% const estilo = "color:blue;" %>
    <div class="container">
        <div class="row m-4">
            <h2>Agregar Producto</h2>
            <div class="col">
                <img src="https://assets.spartangeek.com/cc/ew-thor-1_200106_021015.png" class="img-fluid"/>
            </div>
        <div class="col d-flex flex-column align-items-center">
            <form method="post" action="/creador">
                <div class="input-group mb-5">
                    <span class="input-group-text" for="producto">Producto</span>
                    <input type="text" class="form-control" id="producto" name="producto" placeholder="Producto">
                </div>
                <div class="input-group mb-5">
                    <span for="precio" class="input-group-text">$</span>
                    <input type="number" class="form-control" id="precio" name="precio" placeholder="Precio">
                </div>
                <div class="input-group mb-5">
                    <span class="input-group-text" for="thumbnail">https://assets.riskstore.com/images/....jpg</span>
                    <input type="text" class="form-control" id="thumbnail" name="thumbnail" placeholder="Thumbnail">
                </div>
                <button type="submit" class="btn btn-dark w-100">Agregar</button>
            </form>
        </div>
      </div>
    </div>

    <%- include('../partials/footer.ejs')%>
</body>
</html>
