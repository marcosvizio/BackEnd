<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/style.css">
    <title>Productos</title>
</head>
<body>
    <%- include('../partials/title.ejs') %>
    <% const estilo = "color:blue;" %>
    <div class="container">
    <% if (hayLista) { %>   
        <div class="d-flex p-2 bd-highlight flex-wrap">
            <% listaProductos.forEach((val)=> { %>
                <div class="card m-2">
                    <img src=<%= val.thumbnail %> class="card-img-top imagen" >
                    <div class="card-body">
                        <h5 class="card-title"><%= val.producto %></h5>
                        <p class="card-text"><%= val.precio %></p>
                    </div>
                </div>
             <% }); %>         
            </div>              
    <% } else { %>
        <div class="alert alert-danger" role="alert">
            <strong>No hay productos</strong>
        </div>
    <% } %>
    </div>
    <%- include('../partials/footer.ejs')%>
</body>
</html>
